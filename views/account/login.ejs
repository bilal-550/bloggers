<% 
  if (locals.values == null) locals.values = {}
%>

<h1 class="page-header">Login</h1>

<% if (locals.success != null && locals.success != '') { %>
  <h4 class="form-title-success"><%= locals.success %></h4>
<% } %>

<form action="/login" method="POST" class="form" 
data-validate='[
  {
    "input": "#email",
    "error": "#email-error",
    "errorMessage": "Please fill out this field"
  },
  {
    "input": "#password",
    "error": "#password-error",
    "errorMessage": "Please fill out this field"
  }
]
' novalidate>

  <div class="form-group">
    <label class="form-label" for="email">Email</label>
    <input class="form-control" type="email" value="<%= locals.values.email %>" name="email" id="email">
    <p class="form-error" id="email-error"></p>
  </div>

  <div class="form-group" style="margin: 0;">
    <label class="form-label" for="password">Password</label>
    <input class="form-control" type="password" value="<%= locals.values.password %>" name="password" id="password">
    <p class="form-error" id="password-error"></p>
  </div>

  <% if (locals.error != null && locals.error != '') { %>
    <h4 class="form-title-error"><%= locals.error %></h4>
  <% } %>
  
  <button type="submit" class="btn btn-primary form-submit-button">Login</button>

  <p class="form-bottom-link">New here? <a href="/signup" class="form-bottom-link">Signup</a></p>
  
</form>

