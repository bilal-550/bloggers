<% 
  if (locals.values == null) locals.values = {}
%>

<h1 class="page-header">Signup</h1>

<form action="/signup" method="POST" class="form" 
  data-validate='[
    {
      "input": "#name",
      "error": "#name-error",
      "errorMessage": "Please fill out this field",
      "min": 8,
      "max": 20,
      "minMaxMessage": "Name must be between 8 and 20 characters"
    },
    {
      "input": "#email",
      "error": "#email-error",
      "errorMessage": "Please fill out this field",
      "type": "email"
    },
    {
      "input": "#password",
      "error": "#password-error",
      "errorMessage": "Please fill out this field",
      "min": 6,
      "max": 50,
      "minMaxMessage": "Password must be between 6 and 50 characters"
    }
  ]' novalidate>
  

  <div class="form-group">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" value="<%= locals.values.name %>" name="name" id="name">
    <p class="form-error" id="name-error"></p>
  </div>
  
  <div class="form-group">
    <label class="form-label" for="email">Email</label>
    <input class="form-control" type="email" value="<%= locals.values.email %>" name="email" id="email">
    <p class="form-error" id="email-error"></p>
  </div>
  
  <div class="form-group" style="margin: 0;">
    <label class="form-label" for="password">Password</label>
    <input class="form-control" type="password" value="<%= locals.values.password %>" name="password" id="password">
    <p class="form-error" id="password-error"></p>
  </div>
  
    <% if (locals.error != null && locals.error != '') { %>
      <h4 class="form-title-error"><%= locals.error %></h4>
    <% } %>
    
    <button type="submit" class="btn btn-primary form-submit-button">Create Account</button>
    <!-- <div class="form-group">
      <label for="profile-picture">Profile Picture</label>
      <input type="file" name="profilePicture" id="profile-picture">
    </div> -->
    
      <p class="form-bottom-link">Already have an account? <a href="/login">Login</a></p>
    
</form>
  