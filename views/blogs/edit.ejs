<% if (locals.errorMessage) { %>
<%= errorMessage %>
<% } else {  %>

<h2 class="page-header"><span style="font-size: 1.5rem;">Edit</span> <%= blog.title %></h2>

<form class="form" action="/blogs/<%= blog.id %>/<%= blog.stringId %>?_method=put" method="POST" data-validate='[
  {
    "input": "#title",
    "error": "#title-error",
    "errorMessage": "Please fill out this field",
    "min": 8,
    "max": 40,
    "minMaxMessage": "The title must be between 8 and 20 characters"
  },
  {
    "input": "#description",
    "error": "#description-error",
    "errorMessage": "Please fill out this field",
    "min": 10,
    "max": 100,
    "minMaxMessage": "The Description must be between 10 and 100 characters"
  },
  {
    "input": "#body",
    "error": "#body-error",
    "errorMessage": "Please fill out this field",
    "min": 30,
    "max": 5000,
    "minMaxMessage": "The title must be between 30 and 5000 characters"
  }
]' novalidate>
  <%- include('_form_fields') %>
  <div>
    <button type="submit" class="btn btn-primary form-submit-button">Confirm Changes</button>
    <a href="/blogs/<%= blog.id %>/<%= blog.stringId %>" class="btn btn-danger">Cancel</a>
  </div>
</form>
<% } %>

<%- include('_body_modal')  %>